.header {
    -unity-font: url('project://database/Assets/MainMenu/Sprites/Fonts/PixelAE-Regular.ttf?fileID=12800000&guid=8cccb07c3d8952b4d805adf1633c0761&type=3#PixelAE-Regular');
    -unity-font-definition: initial;
